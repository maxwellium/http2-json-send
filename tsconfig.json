{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2019"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "esnext"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "./node_modules"
  ]
}